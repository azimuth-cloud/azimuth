{% extends "templates/layout.jinja2" %}

{% block pagetitle %}Provision a machine{% endblock %}

{% from 'templates/form_group.jinja2' import form_group_with_errors with context %}

{% block content %}
<div class="col-md-8 col-md-offset-2">
    <form method="POST" action="{{ request.route_url('new_machine', id = template.id) }}"
          class="form-horizontal working" data-working-message="Provisioning machine...">
        <input name="csrf_token" type="hidden" value="{{ request.session.get_csrf_token() }}" />

        {%- call form_group_with_errors("name", "Machine name") %}
            <input name="name" type="text" class="form-control" value="{{ name }}" required
                   pattern="^[a-zA-Z][a-zA-Z0-9.-]*$" title="Must start with a letter and contain alphanumeric, - and . characters only" placeholder="Required" />
        {%- endcall %}

        {%- call form_group_with_errors("template", "Template") %}
            <p class="form-control-static"><code>{{ template.name }}</code></p>
            {%- if template.nat_policy.name == 'ALWAYS' %}
                <span class="help-block">This template <strong>allows</strong> inbound traffic from the internet.</span>
            {%- elif template.nat_policy.name == 'NEVER' %}
                <span class="help-block">This template <strong>does not allow</strong> inbound traffic from the internet.</span>
            {%- endif %}
        {%- endcall %}

        {%- if template.nat_policy.name == 'USER' %}
            {%- call form_group_with_errors("networking", "Networking") %}
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="expose" value="true" {% if expose == "true" %}checked{% endif %} />
                        Allow inbound traffic from the internet
                    </label>
                </div>
                <span class="help-block">
                    If checked, the provisioned machine will have NAT and firewall rules applied to allow inbound traffic from the internet.
                </span>
            {%- endcall %}
        {%- endif %}

        {%- call form_group_with_errors("description", "Description") %}
            <textarea name="description" class="form-control markdown-editor" rows="5" placeholder="Optional...">{{ description }}</textarea>
            <span class="help-block">Description may use <a href="http://daringfireball.net/projects/markdown/">Markdown</a> formatting.</span>
        {%- endcall %}

        {%- call form_group_with_errors("ssh_key", "SSH Public Key", False) %}
            <textarea name="ssh_key" class="form-control" rows="5" placeholder="Required" required>{{ ssh_key }}</textarea>
            <span class="help-block">Root access to the provisioned machine will be granted to the holder of the corresponding private key.</span>
            <span class="help-block">For help generating SSH keys, see <a href="http://jasmin.ac.uk/workflow/ssh-keys/">the main JASMIN site</a>.</span>
        {%- endcall %}

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button name="submitted" type="submit" class="btn btn-primary" autocomplete="off">Provision machine</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}
