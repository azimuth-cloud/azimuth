<?xml version="1.0" encoding="UTF-8"?>
<Item xmlns="http://www.vmware.com/vcloud/v1.5"
      xmlns:rasd="http://schemas.dmtf.org/wbem/wscim/1/cim-schema/2/CIM_ResourceAllocationSettingData">
    <rasd:AddressOnParent>{{ unit }}</rasd:AddressOnParent>
    <rasd:Description>Hard disk</rasd:Description>
    <rasd:ElementName>Hard disk {{ unit + 1 }}</rasd:ElementName>
    <rasd:HostResource xmlns:vcloud="http://www.vmware.com/vcloud/v1.5"
                       vcloud:capacity="{{ capacity }}"
                       vcloud:busSubType="{{ bus_sub_type }}"
                       vcloud:busType="{{ bus_type }}"></rasd:HostResource>
    <rasd:InstanceID>{{ instance_id }}</rasd:InstanceID>
    <rasd:Parent>{{ parent }}</rasd:Parent>
    <rasd:ResourceType>17</rasd:ResourceType>
</Item>
