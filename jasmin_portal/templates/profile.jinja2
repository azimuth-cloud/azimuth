{% extends "templates/layout.jinja2" %}

{% block pagetitle %}Profile information{% endblock %}

{% block content %}
<div class="col-md-8 col-md-offset-2 form-horizontal">
    <form method="POST" action="{{ request.route_url('profile') }}" class="form-horizontal disable-on-submit">
        <input name="csrf_token" type="hidden" value="{{ request.session.get_csrf_token() }}" />
        <div class="form-group">
            <label class="col-sm-3 control-label">Username</label>
            <div class="col-sm-9">
                <p class="form-control-static"><code>{{ user.userid }}</code></p>
            </div>
        </div>
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Email</label>
            <div class="col-sm-9">
                <input name="email" type="email" class="form-control"
                       value="{{ user.email|default('', true) }}" required placeholder="Required" />
                <span class="help-block">Must be a valid email address</span>
            </div>
        </div>
        <div class="form-group">
            <label for="first_name" class="col-sm-3 control-label">First name</label>
            <div class="col-sm-9">
                <input name="first_name" type="text" class="form-control"
                       value="{{ user.first_name|default('', true) }}" required placeholder="Required" />
            </div>
        </div>
        <div class="form-group">
            <label for="surname" class="col-sm-3 control-label">Surname</label>
            <div class="col-sm-9">
                <input name="surname" type="text" class="form-control"
                       value="{{ user.surname|default('', true) }}" required placeholder="Required" />
            </div>
        </div>
        <div class="form-group">
            <label for="ssh_key" class="col-sm-3 control-label">SSH Public Key</label>
            <div class="col-sm-9">
                <textarea name="ssh_key" class="form-control" rows="5" placeholder="Required" required>{{ user.ssh_key|default('', true) }}</textarea>
                <span class="help-block">This will be the default SSH key for the <code>root</code> user of any machines you provision.</span>
                <span class="help-block">For help generating SSH keys, see <a href="http://jasmin.ac.uk/workflow/ssh-keys/">the main JASMIN site</a>.</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button name="submitted" type="submit" class="btn btn-primary" autocomplete="off">Update profile</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}