{% extends "templates/layout.jinja2" %}

{% block pagetitle %}Provision a machine{% endblock %}

{% block content %}
<div class="col-md-8 col-md-offset-2">
    <form class="disable-on-submit" method="POST" action="{{ request.route_url('new_machine') }}" class="form-horizontal">
        <div class="form-group {% if name.error %}has-error{% endif %}">
            <label for="name" class="col-sm-3 control-label">Machine name</label>
            <div class="col-sm-9">
                <input name="name" type="text" class="form-control" value="{{ name.value }}"
                       required pattern="[a-zA-Z0-9_]+" title="Name must use only alphanumeric and _ characters" placeholder="Required" />
                <span class="help-block">Name must use only alphanumeric and _ characters</span>
            </div>
        </div>
        <div class="form-group {% if image.error %}has-error{% endif %}">
            <label for="image_id" class="col-sm-3 control-label">Template</label>
            <div class="col-sm-9">
                <select name="image_id" class="form-control" required>
                    {%- for item in image.choices %}
                        <option value="{{ item.id }}" {% if item.id == image.value %}selected{% endif %}>{{ item.name }}</option>
                    {%- endfor %}
                </select>
            </div>
        </div>
        <div class="form-group {% if description.error %}has-error{% endif %}">
            <label for="description" class="col-sm-3 control-label">Description</label>
            <div class="col-sm-9">
                <textarea name="description" class="form-control" rows="5" placeholder="Optional...">{{ description.value }}</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button name="submitted" type="submit" class="btn btn-primary">Provision machine</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}