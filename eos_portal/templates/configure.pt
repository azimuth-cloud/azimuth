<html metal:use-macro="load: base_template.pt" lang="en">
<section metal:fill-slot="content">
<h2>Server Details</h2>
<table class="table table-striped table-bordered">
	<tr><td>Server Name</td><td>${server['artifact_name']}</td></tr>
	<tr><td>Server UUID</td><td>${server['artifact_uuid']}</td></tr>
	<tr><td>Server ID</td><td>${server['artifact_id']}</td></tr>
	<tr><td>Server Created</td><td>${server['create_dt']}<a href="/docs#credit"></a></td></tr>
	<tr><td>Last Change</td><td>${server['change_dt']}<a href="/docs#credit"></a></td></tr>
	<tr><td>Current State</td><td>${server['state']}<a href="/docs#credit"></a></td></tr>
	<tr><td>Boost Status</td><td>${server['boosted']}<a href="/docs#credit"></a></td></tr>
	<tr><td>Hours until deboost</td><td>${server['boostremaining']}<a href="/docs#credit"></a></td></tr>
</table>
<hr/>
<button class="btn btn-xs btn-success btn-start" type="button" id="btn-start" server="${server['artifact_id']}">Start</button>
<button class="btn btn-xs btn-danger btn-stop" id="btn-stop" type="button" server="${server['artifact_id']}">Stop</button>
<button class="btn btn-xs btn-info btn-restart" id="btn-restart" type="button" server="${server['artifact_id']}">Restart</button>
<img src="/static/img/throbber.gif" id="throbber-${server['artifact_id']}" class="throbber">

<!-- Only show if server is unboosted -->
<button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#boostModal" server="${server['artifact_id']}" tal:condition="server['boosted']!='Boosted' and credit > 0">Boost</button>

<!-- Only show if server is boosted -->
<button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#extendModal" server="${server['artifact_id']}" tal:condition="server['boosted']=='Boosted' and credit > 0">Extend Boost</button>
<button type="button" class="btn btn-xs btn-primary" data-toggle="modal" data-target="#deboostModal" server="${server['artifact_id']}" tal:condition="server['boosted']=='Boosted'">De-Boost</button>



<div id="boostarea">
	<hr/>
	<div class="progress">
	  <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
	    <span class="sr-only">45% Complete</span>
	  </div>
	</div>
	<hr/>	
</div>
<h3>History&nbsp;<span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span></h3>
<table class="table table-striped table-bordered">	
	<tr><th>Date</th><th>Notes</th></tr>
	<tr><td>2014-08-01</td><td>This is a test event. This is a test event. This is a test event. This is a test event.</td></tr>
</table>
<script>

	/* FIXME - This shouldn't be necessary - token is double-quoted */
	
	var token = ${token}; 
    var newtoken = token.substring(1, token.length-1);
	
	$.ajaxSetup({
    	beforeSend: function(xhr) {
        	xhr.setRequestHeader('eos-token', newtoken);
        	xhr.withCredentials = true;
    	}
	});

	$('.btn-start').click(function() {
		var url = 'http://localhost:6543/servers/asdf/Starting';
		var key = $(this).attr("server");
		console.log(key);
		$('#throbber-'+key).css({ opacity: 1 });
		$.ajax({
			type: 'POST',
			url: url,
			dataType: "json",
			data: "vm_id="+key
		});
	});
	
	$('.btn-restart').click(function() {
		var url = 'http://localhost:6543/servers/asdf/Restarting';
		var key = $(this).attr("server");
		console.log(key);
		$('#throbber-'+key).css({ opacity: 1 });
		$.ajax({
			type: 'POST',
			url: url,
			dataType: "json",
			data: "vm_id="+key
		});
	});
	
	$('.btn-stop').click(function() {
		var url = 'http://localhost:6543/servers/asdf/Stopping';
		var key = $(this).attr("server");
		console.log(key);
		$('#throbber-'+key).css({ opacity: 1 });
		$.ajax({
			type: 'POST',
			url: url,
			dataType: "json",
			data: "vm_id="+key
		});
	});
	
	(function poll(){
   		setTimeout(function(){
      		$.ajax({
      			url: 'http://localhost:6543/servers',
      			success: function(data){
        			console.log(data);
        			for(var i = 0; i < data.length; i++) {
        				server = data[i]['artifact_id'];
        				change_dt = data[i]['change_dt'];
        				start_state = $("tr#server-"+server).children('td.state').text();
        				state = data[i]['state'];
        				console.log(state);
        				$("tr#server-"+server).children('td.state').text(state);
        				
        				/* console.log ($("tr").find("[server='" + server + "']").children("td#state").text()); */
        				
        				
        				/* If state has changed, hide the throbber */
        				if (start_state != state) {
        					$('#throbber-'+server).css({ opacity: 0 });
        				}
        				
        				/* Now set table rows to new values */
        				
        				
        			}
        			poll();
      			},
      			dataType: "json",
      			data: "actor_id=${logged_in}"});
  		}, 5000);
	})();
	
	poll();
	
</script>

<div class="modal fade" id="boostModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title" id="boostmodaltitle">
        	<span class="glyphicon glyphicon-signal" aria-hidden="true"></span>
        	Boost Server
        </h3>
      </div>
      <div class="modal-body">
    	<div class="alert alert-info" role="alert">
    		<p><b>Boosting this server will temporarily increase the resources available to you.</b></p>
    		<p>The duration for which you can boost the server will depend upon the number of credits available in your account.</p>
    	</div>
        <hr>
        <form>
          <div class="form-group">
            <h4 id="boosttype">Boost Type - Big (2 Cores, 40GB RAM)</h4>
            <input type="range"  min="1" max="3" id="slidetype"/>
          </div>
          <div class="form-group">
            <h4>Duration</h4>
            <div class="col-md-8" style="padding-left:0px;padding-right:0px;"><input type="range"  min="0" max="100" id="slideduration"></div>
            <div class="col-md-4"><input type="number" size="4" maxlength="4" id="textduration" style="width: 100px; height: 20px; font-size: 10px">&nbsp; hrs</div>
          </div>
        <p><br/><br/><i>This boost action will be automatically ended at <span id="endtime">15:32 on 24/02/2015</span>. Please note that the machine will be restarted at this time in order to make the change.</i></p>
        </form>
        <hr>
        
        <div class="alert alert-success" role="alert">
        	<p>You currently have <b>${credit}</b> credits.</p>
        	<p>This boost will cost <span id="boostcost">0</span> credits, leaving <span id="boostremain">0</span> for future use.</p>
     	</div>
      	<div class="modal-footer">
        	<button class="btn btn-success btn-boost" type="button" server="${server['artifact_id']}">Confirm Boost</button>
        	<button class="btn btn-danger btn-boostcancel" >Cancel</button>

      	</div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="extendModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title" id="boostmodaltitle">
        	<span class="glyphicon glyphicon-signal" aria-hidden="true"></span>
        	Extend Boost
        </h3>
      </div>
      <div class="modal-body">
    	<div class="alert alert-warning" role="warning">
    		<p><b>Extending a boost will increase the amount of time your server's greater resources are available.</b></p>
    		<p>The duration for which you can boost the server will depend upon the number of credits available in your account.</p>
    	</div>
        <hr>
        <form>
          <div class="form-group">
            <h4>Extend for how long?</h4>
            <div class="col-md-8" style="padding-left:0px;padding-right:0px;"><input type="range"  min="0" max="100" id="slideextend"></div>
            <div class="col-md-4"><input type="number" size="4" maxlength="4" id="textextend" style="width: 100px; height: 20px; font-size: 10px">&nbsp; hrs</div>
            <div class="col-md-12" id="extendtimesummary" style="font-size: 10px; font-style: italic;">&nbsp;</div>
          </div>
        <p><br/><br/><i>Your server is currently due to deboost on <span id="#deboostdt">xxxx</span>. With the additional duration, this boost action will be automatically ended at <b><span id="endtime">15:32 on 24/02/2015</span></b>. Please note that the machine will be restarted at this time in order to make the change.</i></p>
        </form>
        <hr>
        <div class="alert alert-success" role="alert">
        	<p>You currently have <b>${credit}</b> credits.</p>
        	<p>This extension will cost <span id="extendcost">0</span> credits, leaving <span id="extendremain">0</span> for future use.</p>
     	</div>
      	<div class="modal-footer">
        	<button class="btn btn-success btn-extendboost" type="button" server="${server['artifact_id']}">Confirm Boost</button>
        	<button class="btn btn-danger btn-extendboostcancel" >Cancel</button>
      	</div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deboostModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title" id="boostmodaltitle">
        	<span class="glyphicon glyphicon-signal" aria-hidden="true"></span>
        	De-Boost
        </h3>
      </div>
      <div class="modal-body">
    	<div class="alert alert-danger" role="danger">
    		<p><b><span class="glyphicon glyphicon-exclamation-sign"></span>&nbsp;Deboosting will immediately reset your VM and return it to the base configuration.</b></p>
    		<p>You will be refunded any unused credits.</p>
    	</div>
        <hr>
        	<p>You currently have <b>${credit}</b> credits.</p>
        	<p>This boost will return you <span id="deboostcost">0</span> credits, giving a total of <span id="deboostremain">0</span> for future use.</p><br/>
      	<div class="modal-footer">
        	<button class="btn btn-success btn-deboost" type="button" server="${server['artifact_id']}">Confirm De-Boost</button>
        	<button class="btn btn-danger btn-deboostcancel" >Cancel</button>
      	</div>
      </div>
    </div>
  </div>
</div>

<script>
  	
  		$('.btn-deboost').click(function() {
  			var ram = 40;
  			var cores = 1;
  			
  			$("#deboostModal").modal('hide');
			//$("#boostarea").toggle();
			var key = '${server['artifact_uuid']}';
			var url = 'http://localhost:6543/servers/' + key + '/specification';
			console.log(key);
			var serverconfig = {ram : ram, cores : cores};
			$.ajax({
				type: 'POST',
				url: url,
				dataType: "json",
				data: serverconfig
			});
			
			var url = 'http://localhost:6543/servers/asdf/Pre_Deboosting';
			var key = $(this).attr("server");
			console.log(key);
			$('#throbber-'+key).css({ opacity: 1 });
			$.ajax({
				type: 'POST',
				url: url,
				dataType: "json",
				data: "vm_id="+key
			});
			/*
			var url = 'http://localhost:6543/users/asdf/credit';
			credit = $('span#boostcost').text();
			credit = 0-credit;
			var creditconfig = {credit : credit, actor_id : 'bcollier'};
			console.log(key);
			$.ajax({
				type: 'POST',
				url: url,
				dataType: "json",
				data: creditconfig
			}); */
  			
  		});
  		
  		$('.btn-extendboost').click(function() {
  			$("#extendModal").modal('hide');
  		});
  		
  		
  		
  		$('.btn-boost').click(function() {
			
			var ram = 40;
  			var cores = 1;
  		
	  		if ($("input#slidetype").val() == 1) {
				cores = 2;
				ram = 40;
			}
			if ($("input#slidetype").val() == 2) {
				cores = 8;
				ram = 140;
			}
			if ($("input#slidetype").val() == 3) {
				cores = 16;
				ram = 500;
			}
			
			$("#boostModal").modal('hide');
			$("#boostarea").toggle();
			var key = '${server['artifact_uuid']}';
			var url = 'http://localhost:6543/servers/specific/specification';
			console.log(key);
			var serverconfig = {ram : ram, cores : cores};
			$.ajax({
				type: 'POST',
				url: url,
				dataType: "json",
				data: serverconfig
			});
			
			var url = 'http://localhost:6543/servers/asdf/Preparing';
			var key = $(this).attr("server");
			console.log(key);
			$('#throbber-'+key).css({ opacity: 1 });
			$.ajax({
				type: 'POST',
				url: url,
				dataType: "json",
				data: "vm_id="+key
			});
			
			var url = 'http://localhost:6543/users/asdf/credit';
			credit = $('span#boostcost').text();
			credit = 0-credit;
			var creditconfig = {credit : credit, actor_id : 'bcollier'};
			console.log(key);
			$.ajax({
				type: 'POST',
				url: url,
				dataType: "json",
				data: creditconfig
			});
			
		});
  	
  		$('.btn-boostcancel').click(function() {
			$("#boostModal").modal('hide');
		});
		
		$('.btn-deboostcancel').click(function() {
			$("#deboostModal").modal('hide');
		});
		
		$('.btn-extendboostcancel').click(function() {
			$("#extendModal").modal('hide');
		});
		
		$('#slidetype').change(function() {
			if ($("input#slidetype").val() == 1) {
				$("h4#boosttype").text("Boost Type - Standard+ (2 Cores, 40GB RAM)");
			}
			if ($("input#slidetype").val() == 2) {
				$("h4#boosttype").text("Boost Type - Big (8 Cores, 140GB RAM)");
			}
			if ($("input#slidetype").val() == 3) {
				$("h4#boosttype").text("Boost Type - Max (16 Cores, 500GB RAM)");
			}
		});

		$('#slideextend').change(function() {
			update_calcs();
		});

 		$(document).ready(function() {
			update_calcs();
			update_extend_cost();
			update_deboost_cost();
		});
  	
  		$('#slidetype').change(function() {
			update_calcs();
		});
  	
  		$('#slideduration').change(function() {
			update_calcs();
		});
		
		$('#slideextend').change(function() {
			update_extend_cost();
		});
		
		multiplier={"1":1,"2":3,"3":12};
		
		Date.prototype.addHours = function(h) {
			this.setTime(this.getTime() + (h*60*60*1000));
			return this;
		}
		
		function update_calcs() {
			var availabletime = calculate_available_time($("input#slidetype").val());
			$("input#slideduration").attr("max", availabletime);
			$('input#textduration').val(exp_curve_transform($('#slideduration').val(), availabletime));
			var hours = $('#slideduration').val() % 24;
			var days = ($('#slideduration').val() - hours) / 24;
			console.log($('#slideduration').val());
			console.log(days + " days, " + hours + " hours.");
			$('#timesummary').val(days + " days, " + hours + " hours.");
			var credits_used = $('#slideduration').val() * multiplier[$("input#slidetype").val()];	
			$('span#boostremain').text(${credit}-credits_used);
			$('span#boostcost').text(credits_used);
			$('span#endtime').text(get_future_date($('#slideduration').val()));
		}
		
		function exp_curve_reverse_transform(xdash, max) {
			if (max < 20) {
				return x;
			}
			else {
				return max * (Math.log(xdash) / Math.log(max));
			}
		}
		
		function exp_curve_transform(x, max) {
			// Transform values from a slider such that the maximum matches
			// the value emitted
			if (max < 20) {
				return x;
			}
			else {
				return Math.exp(x * ((Math.log(max))/max));
			}
		}
		
		function update_deboost_cost() {
			var credit_refunded = 35;
			$('span#deboostremain').text(${credit}+credits_refunded);
			$('span#deboostcost').text(credits_refunded);			
		}
		
		function update_extend_cost() {
			var availabletime = calculate_available_time($("input#slidetype").val());
			$("input#slideextend").attr("max", availabletime);
			$('input#textextend').val($('#slideextend').val());
			var current_boost = 1;
			var credits_used = $('#slideextend').val() * multiplier[current_boost];	
			$('span#extendremain').text(${credit}-credits_used);
			$('span#extendcost').text(credits_used);
			$('span#endtime').text(get_future_date($('#slideextend').val()));
			var hours = $('#slideextend').val() % 24;
			var days = ($('#slideextend').val() - hours) / 24;
			console.log($('#slideextend').val());
			console.log(days + " days, " + hours + " hours.");
			$('#extendtimesummary').text(days + " days, " + hours + " hours.");
		}
		
		function calculate_available_time(boostlevel) {
			var credit = ${credit};
			return credit / multiplier[boostlevel];
		}
		
		function get_future_date(future_hours) {
			var currentdate = new Date();
			return currentdate.addHours(future_hours).toLocaleFormat('%H:%M on %A, %B %e, %Y');	
		}
  	
  </script>

</section>
</html>