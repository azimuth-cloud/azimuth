###
# Example development configuration
###


###
# App configuration
###
[app:main]
use = egg:jasmin-cloud

pyramid.reload_templates = true
pyramid.debug_authorization = true
pyramid.debug_notfound = true
pyramid.debug_routematch = true
pyramid.default_locale_name = en
pyramid.includes = pyramid_debugtoolbar

# vCloud endpoint
vcloud.endpoint = https://vcloud.example.com

# LDAP configuration
ldap.server = ldap://ldap.example.com
ldap.bind_dn = CN=portal,OU=software,DC=example,DC=com
ldap.bind_pass = myuserpass
ldap.user_base = OU=Users,DC=example,DC=com
ldap.group_base = OU=Groups,DC=example,DC=com
ldap.group_suffix = _vcloud

# Secrets
auth.secret = <myauthsecret>

# Session configuration
session.type = cookie
session.validate_key = <myvalidatekey>
session.encrypt_key = <myencryptkey>


###
# WSGI Server configuration
###
[server:main]
use = egg:pyramid#wsgiref
host = 0.0.0.0
port = 8080


###
# Logging configuration
###
[loggers]
keys = root, jasmin_cloud

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[logger_jasmin_cloud]
level = DEBUG
handlers =
qualname = jasmin_cloud

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s
