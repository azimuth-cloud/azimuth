###
# app configuration
# http://docs.pylonsproject.org/projects/pyramid/en/1.5-branch/narr/environment.html
###

[app:main]
use = egg:jasmin-cloud

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en
pyramid.includes = pyramid_debugtoolbar

# By default, the toolbar only appears for clients from IP addresses
# '127.0.0.1' and '::1'.
# debugtoolbar.hosts = 127.0.0.1 ::1

# vCloud endpoint
vcloud.endpoint = https://www.example.com/vcloud/api

# LDAP configuration
ldap.server = ldap://ldap.example.com
ldap.bind_dn = CN=someuser,OU=Users,DC=example,DC=com
ldap.bind_pass = P@s5w0rd
ldap.user_base = OU=Users,DC=example,DC=com
ldap.group_base = OU=Groups,DC=example,DC=com
ldap.group_suffix = _vcloud-admins

# DB configuration
sqlalchemy.url = postgresql://@/jasminportal

# Secrets
session.secret = asecret
auth.secret = anothersecret


###
# wsgi server configuration
###

[server:main]
use = egg:pyramid#wsgiref
host = 0.0.0.0
port = 6543


###
# logging configuration
# http://docs.pylonsproject.org/projects/pyramid/en/1.5-branch/narr/logging.html
###

[loggers]
keys = root, jasmin_cloud

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[logger_jasmin_cloud]
level = DEBUG
handlers =
qualname = jasmin_cloud

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s
